/* === トラックボール入力リスナーへの割当（この機種は trackball_listener） === */
&trackball_listener {
    /* ★向き補正（公式相当）＋ポインタ入力時に Layer1 を一時有効にする */
    input-processors = <
        &zip_xy_transform (INPUT_TRANSFORM_X_INVERT | INPUT_TRANSFORM_Y_INVERT)
        &zip_temp_layer 1 1500
    >;

    /* Layer3: 縦スクロール（Y→Wheel） */
    scroll_v {
        layers = <3>;
        input-processors = <&my_vert_scroll>;
        process-next;
    };

    /* Layer4: 横スクロール（X→HWheel） */
    scroll_h {
        layers = <4>;
        input-processors = <&my_horiz_scroll>;
        process-next;
    };

    /* 速度プリセット: Layer5/6 = カーソル高速/低速, Layer7/8 = スクロール高速/低速 */
    speed_fast {
        layers = <5>;
        input-processors = <&zip_xy_scaler 2 1>;
        process-next;
    };
    speed_slow {
        layers = <6>;
        input-processors = <&zip_xy_scaler 1 2>;
        process-next;
    };
    scrl_fast {
        layers = <7>;
        input-processors = <&zip_scroll_scaler 2 1>;
        process-next;
    };
    scrl_slow {
        layers = <8>;
        input-processors = <&zip_scroll_scaler 1 2>;
        process-next;
    };
};

